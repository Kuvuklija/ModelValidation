@model ModelValidation.Models.AppointmentsForSelfValidation
@{
    ViewBag.Title = "MakeBookingWithSelfValidation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MakeBookingWithSelfValidation</h2>

@using (Html.BeginForm())
{ //html-helpers generate error-html, if recived model is invalid

    @Html.ValidationSummary(true) <!--in the top of page-->

    <p>@Html.ValidationMessageFor(m => m.ClientName)</p> <!--above the field-->
    <p>Your name: @Html.EditorFor(m => m.ClientName)</p>

    <p>@Html.ValidationMessageFor(m => m.Date)</p>
    <p>Appointment Date: @Html.EditorFor(m => m.Date)</p>

    <p>@Html.ValidationMessageFor(m => m.TermsAccept)</p>
    <p>@Html.EditorFor(m => m.TermsAccept) I accept the terms & conditions</p>

    <input type="submit" value="Make Booking" />
}



